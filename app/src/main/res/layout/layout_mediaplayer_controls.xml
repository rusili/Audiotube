<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        >

        <ImageButton
            android:id="@+id/notification_button_repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:src="@drawable/ic_loop_black_24dp"
            />
        <ImageButton
            android:id="@+id/notification_button_prev"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:src="@drawable/ic_skip_previous_black_24dp"
            />
        <ImageButton
            android:id="@+id/notification_button_pause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:src="@drawable/ic_pause_black_24dp"
            />
        <ImageButton
            android:id="@+id/notification_button_play"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:src="@drawable/ic_play_arrow_black_24dp"
            />
        <ImageButton
            android:id="@+id/notification_button_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            />

    </LinearLayout>

</LinearLayout>